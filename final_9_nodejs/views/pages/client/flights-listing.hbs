<!DOCTYPE html>
<html lang="vi">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Tra c·ª©u chuy·∫øn bay</title>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

<style>
/* ================= BACKGROUND ================= */
body {
  margin: 0;
  padding-top: 90px;
  min-height: 100vh;
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
  background:
    linear-gradient(rgba(255,255,255,0.88), rgba(255,255,255,0.88)),
    url("https://images.unsplash.com/photo-1506744038136-46273834b3fb");
  background-size: cover;
  background-position: center;
  background-attachment: fixed;
}

/* ================= SEARCH SUMMARY ================= */
.search-summary {
  backdrop-filter: blur(12px);
  background: rgba(255,255,255,0.92);
  border-radius: 20px;
  box-shadow: 0 18px 45px rgba(0,0,0,0.15);
}

/* ================= FILTER ================= */
.filter-box {
  background: rgba(255,255,255,0.95);
  border-radius: 16px;
  padding: 20px;
  box-shadow: 0 12px 30px rgba(0,0,0,0.12);
  position: sticky;
  top: 110px;
}

.filter-box h4 {
  font-weight: 700;
  color: #0d6efd;
}

/* ================= FLIGHT CARD ================= */
.flight-card {
  background: rgba(255,255,255,0.97);
  border-radius: 20px;
  padding: 18px;
  margin-bottom: 18px;
  transition: 0.3s ease;
  box-shadow: 0 10px 28px rgba(0,0,0,0.1);
}

.flight-card:hover {
  transform: translateY(-4px);
  box-shadow: 0 18px 45px rgba(0,0,0,0.18);
}

.flight-card img {
  max-width: 110px;
  object-fit: contain;
}

/* ================= PRICE ================= */
.flight-price {
  font-size: 20px;
  font-weight: 700;
  color: #0d6efd;
}

/* ================= BUTTON ================= */
.btn-filter {
  width: 100%;
  border-radius: 30px;
  font-weight: 600;
}

/* ================= PAGINATION ================= */
.pagination .page-link {
  border-radius: 50px;
  margin: 0 4px;
}
</style>
</head>

<body>

<!-- ================= SEARCH SUMMARY ================= -->
<div class="container justify-content-center d-flex mt-4">
  <form class="g-4 p-5 rounded-4 search-summary" style="width:80vw">
    <div class="row mb-3">
      <h4 class="fw-bold">‚úàÔ∏è Th√¥ng tin t√¨m ki·∫øm</h4>
    </div>

    <div class="row">
      <div class="col-md-6">
        <select class="form-select form-select-lg mb-3" disabled>
          <option>{{formData.type}}</option>
        </select>
      </div>
      <div class="col-md-6">
        <select class="form-select form-select-lg mb-3" disabled>
          <option>{{formData.class}}</option>
        </select>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-3">
        <div class="input-group">
          <span class="input-group-text">T·ª´</span>
<input class="form-control" value="{{formData.from.airport_location}}" disabled>
        </div>
      </div>

      <div class="col-lg-3">
        <div class="input-group">
          <span class="input-group-text">ƒê·∫øn</span>
          <input class="form-control" value="{{formData.to.airport_location}}" disabled>
        </div>
      </div>

      <div class="col-lg-6">
        <div class="row">
          <div class="col">
            <div class="input-group">
              <span class="input-group-text">Kh·ªüi h√†nh</span>
              <input type="date" class="form-control" value="{{formData.departure_datetime}}" disabled>
            </div>
          </div>
          <div class="col">
            <div class="input-group">
              <span class="input-group-text">Chuy·∫øn v·ªÅ</span>
              <input type="date" class="form-control" value="{{formData.toDate}}" disabled>
            </div>
          </div>
        </div>
      </div>
    </div>
  </form>
</div>

<!-- ================= MAIN CONTENT ================= -->
<div class="container mt-5">
  <div class="row">

    <!-- FILTER -->
    <div class="col-lg-4">
      <div class="filter-box">
        <h4>üéØ B·ªô l·ªçc</h4>
        <hr>
        {{#each airlines}}
        <div class="form-check">
          <input class="form-check-input" type="checkbox" name="airlines[]" value="{{this.id}}">
          <label class="form-check-label">{{this.airline_name}}</label>
        </div>
        {{/each}}
        <button class="btn btn-outline-primary btn-filter mt-3">L·ªçc chuy·∫øn bay</button>
      </div>
    </div>

    <!-- FLIGHT LIST -->
    <div class="col-lg-8">
      {{#each flights}}
      <form action="./select-flight/booking-seat" method="post">
        <button type="submit" class="border-0 bg-transparent w-100 text-start">
          <input type="hidden" name="flightData" value="{{JSONStringify this}}">
          <input type="hidden" name="inputData" value="{{JSONStringify ...formData}}">

          <div class="flight-card row align-items-center">
            <div class="col-md-3 text-center">
              <img src="{{this.airlineInfo.airline_logo}}">
              <div class="fw-bold mt-2">{{this.airlineInfo.airline_name}}</div>
            </div>

            <div class="col-md-6">
              <div class="row text-center">
                <div class="col fw-bold">
                  {{splitString this.departure_datetime " " 1}}<br>{{this.from.airport_code}}
                </div>
                <div class="col">
                  {{calculateDuration this.departure_datetime this.arrival_datetime}}<br>Bay th·∫≥ng
                </div>
                <div class="col fw-bold">
                  {{splitString this.arrival_datetime " " 1}}<br>{{this.to.airport_code}}
                </div>
              </div>
            </div>

            <div class="col-md-3 text-center">
              <div class="flight-price">{{formatCurrency this.economy_price}}</div>
                <div>1 h√†nh kh√°ch</div>
            </div>
          </div>
        </button>
      </form>
      {{/each}}
    </div>
  </div>
</div>

</body>
</html>
